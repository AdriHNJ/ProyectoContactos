{
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}